<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="8dp"
    android:layout_margin="10dp">
<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/prevention_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/stayathome_icon"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/prevention_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay at home"
        android:layout_toRightOf="@+id/prevention_image"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginTop="0dp"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/baloo"/>
    <TextView
        android:id="@+id/prevention_desciption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevention_title"
        android:layout_toRightOf="@+id/prevention_image"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:text="Stay at home in order to stop the covid_19 spread"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>