<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/textcolor"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/closepopup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:background="@drawable/ic_close_black_24dp"
        android:padding="10dp" />
   <TextView
       android:id="@+id/resultanalized"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:textColor="@color/white"
       android:textSize="30sp"/>
    <TextView
        android:id="@+id/tag"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#DD1A1A"
        android:layout_margin="10dp"
        android:text="Note :this test not meant to replace specialised medical advisory.The above probability is just an estimation based on your previous answers."
/>
</LinearLayout>